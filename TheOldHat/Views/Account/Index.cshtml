@model ApplicationUserViewModel
@{
    ViewData["Title"] = "Users";

    <h1>Users</h1>

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Language</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model.ApplicationUsers)
            {
                <tr>
                    <td>@user.Id</td>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>@user.Language</td>
                    <td><a class="btn btn-primary btn-sm" asp-action="Update" asp-route-id="@user.Id">Edit</a></td>
                </tr>
            }
        </tbody>
    </table>
}
