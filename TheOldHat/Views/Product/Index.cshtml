@model ProductViewModel
@{
    ViewData["Title"] = "Products";
}

<h1>Products</h1>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Count</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var product in Model.Products)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Count</td>
                    <td>@product.Description</td>
                    <td><a class="btn btn-primary btn-sm" asp-action="Update" asp-route-id="@product.Id">Edit</a></td>
                </tr>
            }
        <tr>
            <td><a class="btn btn-primary" asp-action="Add">Add New Product</a></td>
        </tr>
    </tbody>
</table>